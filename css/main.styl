@import "normalize";
@import "whhg";
$brand-primary = #428bca;
$primary-width = 1170px;
clearfix() {
  &:before,
  &:after {
    content: " "; // 1
    display: table; // 2
  }
  &:after {
    clear: both;
  }
}
time {
	font-size:10px;
	color:#666;
}
.link {
	color:darken($brand-primary, 30%);
	text-decoration:none;
	transition: color 0.3s ease;
	&:hover {
		color:$brand-primary;
	}
}
.container {
	position:relative;
	width:$primary-width;
	margin:0px auto;
	clearfix();
}
.pull-right {
	float:right;
}
.pull-left {
	float:left;
}
html {
	height:100%;
	color:#333;
	body {
		position:relative;
		min-height:100%;
		height:auto;
		background-image: url("../images/pic1.jpg");//#f5f5f5;
		background-position:center;
		background-attachment:fixed;
		ul {
			list-style:none;
		}
	}
}
.header {
	background-color:rgba(66, 139, 202, 0.7);
	height:65px;
	.logo {
		position:relative;
		float:left;
		width:61px;
		height:64px;
		font-weight:bold;
		.icon-cloud {
			font-size:60px;
		}
		.icon-desklamp {
			position:absolute;
			top:30px;
			left:21px;
			color:#fff;
			font-size:19px;
			&:before {
				position:relative;
				z-index:1;
			}
			&:after {
				content: '';
				position: absolute;
				top: 2px;
				right: 2px;
				width: 10px;
				height: 10px;
				border-radius: 50%;
				background-color: #EEEE12;
				z-index:0;
			}
		}
	}
	.action-menu {
		margin:10px 0px 20px;
		line-height:26px;
		li {
			 a {
				color:#fff;
			 }
		}
	}
}
